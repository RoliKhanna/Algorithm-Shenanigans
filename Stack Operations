// Stack operations

#include<iostream.h>
#include<conio.h>
#include<process.h>

class STACK
{ int top, A[50], size;
  public:
  void initialise(int);
  void push(int);
  void pop();
  void display();
};

void STACK::initialise(int x)
{ top=0;
  size=x;
}

void STACK::push(int a)
{ if(top==(size-1))
   cout<<"\n Overflow. ";
  else
   A[top]=a;
  top++;
}

void STACK::pop()
{ if(top==-1)
   cout<<"\n Stack underflow. ";
  else
   top--;
}

void STACK::display()
{ cout<<endl;
  for(int i=0; i<top; i++)
   cout<<A[i]<<" ";
}

void options(STACK A)
{ int ch, ele;
  char CH;
  cout<<"\n Enter the options : Push(1), Pop(2), Display(3) or Exit(4) ? ";
  switch(ch)
  { case 1: cout<<"\n Enter element : ";
	    cin>>ele;
	    A.push(ele);
	    break;
    case 2: A.pop();
	    break;
    case 3: A.display();
	    break;
    case 4: exit(0);
    default: cout<<"\n Wrong choice. ";
	     break;
  }
  cout<<"\n Do you wish to repeat? (y/n)";
  if((CH=='Y')||(CH=='y'))
   options(A);
  else
   exit(0);
}

void main()
{ clrscr();
  STACK S;
  int m;
  cout<<"\n Enter size of stack : ";
  cin>>m;
  S.initialise(m);
  options(S);
  getch();
}
